<Window x:Class="_2DGameEngine.Startup.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:_2DGameEngine.Startup"
        mc:Ignorable="d"
        Title="StartupWindow"
        Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="White"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Loading resources..." FontSize="24" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <ProgressBar x:Name="LoadingProgressBar" Width="300" Height="20" IsIndeterminate="True"/>
        </StackPanel>
    </Grid>
</Window>
